#include <stdio.h>
#include <math.h>
int mod_exp(int base, int exp, int modulus)
{
int result = 1;
base = base % modulus;
while (exp > 0)
{
if (exp % 2 == 1)
{

result = (result * base) % modulus;
}
exp = exp >> 1;
